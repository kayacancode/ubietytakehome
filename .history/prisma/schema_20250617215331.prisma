generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model DeviceStatus {
  device_id    String  @id
  timestamp    DateTime
  battery_level Int?
  rssi         Int?
  online       Boolean
}
